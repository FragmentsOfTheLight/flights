{
  "version": "0.1.12",
  "npmClient": "npm",
  "command": {
    "publish": {
      "access": "public",
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %s",
      "allowBranch": [
        "main",
        "dev"
      ]
    },
    "version": {
      "private": false,
      "push": true
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}